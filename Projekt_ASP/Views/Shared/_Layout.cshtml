<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OLX</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <style>
        .logo {
            font-family: "Kanit", sans-serif;
            font-weight: 600;
            font-style: normal;
            font-size:2.5rem;
        }
    </style>
</head>
<body>

    <nav class="navbar" style="background-color:#1d8968;">
        <div class="container-fluid">
            <a class="navbar-brand text-white ms-lg-5 logo" asp-controller="Home" asp-action="Index">Olx</a>
            <div class="ms-auto d-flex">
                <a class="btn me-3 text-white" href="#" style="font-size:1rem;"><i class="bi bi-heart-fill"></i></a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-dark text-white me-3" href="#"><i class="bi bi-person"></i> Twoje Konto</a>
                }
                else
                {
                    <a class="btn btn-dark text-white me-3" asp-controller="User" asp-action="Index"><i class="bi bi-person"></i> Zaloguj się</a>
                }
                <a class="btn btn-dark text-white me-3" href="#" style="font-size: 1rem;"><i class="bi bi-plus"></i> Dodaj ogłoszenie</a>
            </div>
        </div>
    </nav>


 
   

    <div class="container-fluid" style="width:100%; margin:0; padding:0;"
        >
        @RenderBody()
    </div>

    <footer class="text-center py-3">
        <p>&copy; 2024 - All rights reserved.</p>
    </footer>
</body>
</html>
