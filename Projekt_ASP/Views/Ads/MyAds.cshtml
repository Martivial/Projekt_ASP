@model IEnumerable<Projekt_ASP.Models.Ad>

<div class="container mt-5">
    <h2>Twoje ogłoszenia</h2>
    <div class="row">
        @foreach (var ad in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @if (ad.Image != null)
                    {
                        <img class="card-img-top" src="data:image/jpeg;base64,@(Convert.ToBase64String(ad.Image))" alt="Zdjęcie" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@ad.Title</h5>
                        <p class="card-text">@ad.Description</p>
                        <p><strong>Cena:</strong> @ad.Price zł</p>
                        <p><strong>Lokalizacja:</strong> @ad.Location</p>
                        <p><strong>Telefon:</strong> @ad.PhoneNumber</p>
                        <a asp-action="Details" asp-route-id="@ad.Id" class="btn btn-primary">Szczegóły</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
